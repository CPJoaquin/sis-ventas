<%- include('../layouts/header') %>

<div class="container card col-md-6 mt-5">
    <div class=" card-header">
        <h2 class="card-title">INICIAR SESIÓN</h2>
    </div>
    <div class="card-body">
        <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Nombre de usuario</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Ingrese su nombre de usuario">
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña">
            </div>
            <button type="submit" class="btn btn-primary btn-block col-md-6 m-auto">Ingresar</button>
          </form>
    </div>
</div>

<%- include('../layouts/footer') %>