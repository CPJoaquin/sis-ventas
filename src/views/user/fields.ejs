<div class="form-group">
    <label for="first_name">Nómbre:</label>
    <input 
        type="text" 
        class="form-control" 
        id="first_name" 
        name="first_name" 
        <% if(typeof user !== 'undefined') { %>
            value="<%= user[0].first_name %>"
        <% } %>
        aria-describedby="first_name">
</div>
<div class="form-group">
    <label for="last_name">Apellidos:</label>
    <input 
        type="text" 
        class="form-control" 
        id="last_name" 
        name="last_name" 
        <% if(typeof user !== 'undefined') { %>
            value="<%= user[0].last_name %>"
        <% } %>
        aria-describedby="last_name">
</div>
<div class="form-group">
    <label for="username">Nómbre:</label>
    <input 
        type="text" 
        class="form-control" 
        id="username" 
        name="username" 
        <% if(typeof user !== 'undefined') { %>
            value="<%= user[0].username %>"
        <% } %>
        aria-describedby="username">
</div>
<div class="form-group">
    <label for="email">Correo:</label>
    <input 
        type="email" 
        id="email" 
        name="email" 
        <% if(typeof user !== 'undefined') { %>
            value="<%= user[0].email   %>"
        <% } %>
        class="form-control">
</div>
<div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" name="password">
</div>

<button type="submit" class="btn btn-primary btn-block col-md-6 m-auto" onclick="return confirm('¿Desea guardar los datos?')">Aceptar</button>